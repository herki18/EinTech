@model System.Collections.Generic.List<EinTech.Api.Contracts.Models.PersonModel>

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2>List of Persons</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control" asp-action="Create">Create New</a>
    </div>
    
    <div class="col-12 border p-3 m-3">
        <div>
            <form asp-controller="Persons" asp-action="Index">
                <div class="form-group row">
                    <div class="col-3">
                        <input type="text" name="SearchString" class="form-control" value="@ViewBag.SearchString">
                    </div>
                    <div class="col-2">
                        <input type="submit" value="Search" class="btn btn-info" />
                    </div>
                </div>
            </form>
        </div>
        <form>
            @if (Model.Count > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>Name</th>
                        <th>Group</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GroupName)
                            </td>
                        </tr>
                    }
                </table>

            }
            else
            {
                <p>No Persons in List</p>
            }
        </form>
    </div>
</div>